<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.chemik.ubiapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LocationModActivity"></activity>
        <activity android:name=".activities.QRGeneratingActivity" />
        <activity android:name=".activities.ItemInformationActivity" />
        <activity android:name=".activities.ItemsListActivity" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".activities.BoxesListActivity" />
        <activity
            android:name=".activities.LocationsListActivity"
            android:label="@string/title_activity_locations_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>